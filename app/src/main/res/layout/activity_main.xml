<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollIndicators="right"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical">

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginTop="12dp" android:id="@+id/player4"
                app:layout_constraintTop_toBottomOf="@+id/player3"
                android:orientation="vertical" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                    android:text="Player 4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/header"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.101"/>
            <TextView
                    android:text="HP: 100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/HPtext"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
            />
            <Button
                    android:text="-5"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/sub5"
                    style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/sub1"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/header"/>
            <Button
                    android:text="-1"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/sub1"
                    style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintTop_toTopOf="@+id/sub5"
                    app:layout_constraintBottom_toBottomOf="@+id/sub5" app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/sub5" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/add1"/>
            <Button
                    android:text="+1"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/add1"
                    style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintTop_toTopOf="@+id/sub1"
                    app:layout_constraintBottom_toBottomOf="@+id/sub1" app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/sub1" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/add5"/>
            <Button
                    android:text="+5"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/add5"
                    style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintTop_toTopOf="@+id/add1"
                    app:layout_constraintBottom_toBottomOf="@+id/add1" app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/add1" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginTop="5dp" android:id="@+id/player3"
                app:layout_constraintTop_toBottomOf="@+id/player2"
                app:layout_constraintBottom_toTopOf="@+id/player4">

            <TextView
                    android:text="Player 3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/header"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.101"/>
            <TextView
                    android:text="HP: 100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/HPtext"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
            />
            <Button
                    android:text="-5"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/sub5"
                    style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/sub1"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/header"/>
            <Button
                    android:text="-1"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/sub1"
                    style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintTop_toTopOf="@+id/sub5"
                    app:layout_constraintBottom_toBottomOf="@+id/sub5" app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/sub5" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/add1"/>
            <Button
                    android:text="+1"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/add1"
                    style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintTop_toTopOf="@+id/sub1"
                    app:layout_constraintBottom_toBottomOf="@+id/sub1" app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/sub1" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/add5"/>
            <Button
                    android:text="+5"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/add5"
                    style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintTop_toTopOf="@+id/add1"
                    app:layout_constraintBottom_toBottomOf="@+id/add1" app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/add1" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.5" android:id="@+id/player2"
                app:layout_constraintTop_toBottomOf="@+id/player1"
                app:layout_constraintBottom_toTopOf="@+id/player3" android:layout_marginTop="4dp">

            <TextView
                    android:text="Player 2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/header"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.101"/>
            <TextView
                    android:text="HP: 100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/HPtext"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
            />
            <Button
                    android:text="-5"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/sub5"
                    style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/sub1"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/header"/>
            <Button
                    android:text="-1"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/sub1"
                    style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintTop_toTopOf="@+id/sub5"
                    app:layout_constraintBottom_toBottomOf="@+id/sub5" app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/sub5" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/add1"/>
            <Button
                    android:text="+1"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/add1"
                    style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintTop_toTopOf="@+id/sub1"
                    app:layout_constraintBottom_toBottomOf="@+id/sub1" app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/sub1" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/add5"/>
            <Button
                    android:text="+5"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/add5"
                    style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintTop_toTopOf="@+id/add1"
                    app:layout_constraintBottom_toBottomOf="@+id/add1" app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/add1" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <TextView
                android:text="Welcome to Life Counter!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_header" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp" android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.006"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" app:fontFamily="sans-serif-black"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline"
                                              android:orientation="vertical"
                                              app:layout_constraintGuide_percent="0.5"/>
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.0" android:id="@+id/player1"
                app:layout_constraintTop_toBottomOf="@+id/app_header"
                app:layout_constraintBottom_toTopOf="@+id/player2">

            <TextView
                    android:text="Player 1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/header"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.101"/>
            <TextView
                    android:text="HP: 100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/HPtext"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
            />
            <Button
                    android:text="-5"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/sub5"
                    style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/sub1"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/header"/>
            <Button
                    android:text="-1"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/sub1"
                    style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintTop_toTopOf="@+id/sub5"
                    app:layout_constraintBottom_toBottomOf="@+id/sub5" app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/sub5" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/add1" tools:ignore="DuplicateIds"
            />
            <Button
                    android:text="+1"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/add1"
                    style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintTop_toTopOf="@+id/sub1"
                    app:layout_constraintBottom_toBottomOf="@+id/sub1" app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/sub1" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/add5" tools:ignore="DuplicateIds"
            />
            <Button
                    android:text="+5"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/add5"
                    style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintTop_toTopOf="@+id/add1"
                    app:layout_constraintBottom_toBottomOf="@+id/add1" app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/add1" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent" tools:ignore="DuplicateIds"
            />
        </android.support.constraint.ConstraintLayout>
        <TextView
                android:layout_width="316dp"
                android:layout_height="match_parent"
                android:id="@+id/gameUpdate"
                app:fontFamily="sans-serif-black"
                app:layout_constraintTop_toBottomOf="@+id/player4"
                android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>